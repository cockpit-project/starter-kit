{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "exactOptionalPropertyTypes": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "paths": {
        "*": ["./pkg/lib/*"]
    },
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "target": "es2020"
  },
  "include": [
    "src/**/*"
  ]
}
